<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p3"
    android:scaleType="centerCrop"
    tools:context=".Add_Parking">

    <!-- Semi-transparent Overlay -->
    <View
        android:id="@+id/overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Top Gradient Overlay -->
    <View
        android:id="@+id/topGradient"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:background="@drawable/top_dark_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Header Section -->
            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Smart Parking Finder"
                android:textColor="#7DC143"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Parking Details"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appTitle"
                android:layout_marginTop="4dp" />

            <!-- Parking Name Section -->
            <TextView
                android:id="@+id/textParkingName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parking Name"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pageTitle"
                android:layout_marginTop="32dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardParkingName"
                android:layout_width="0dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="#80FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textParkingName"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/editTextParkingName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#000000"
                    android:textColorHint="#444444"
                    android:hint="e.g. City Center Garage"
                    android:imeOptions="actionNext" />

            </androidx.cardview.widget.CardView>

            <!-- Address Section -->
            <TextView
                android:id="@+id/textAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardParkingName"
                android:layout_marginTop="24dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAddress"
                android:layout_width="0dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="#80FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textAddress"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/editTextAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#000000"
                    android:textColorHint="#444444"
                    android:hint="e.g. 123 Louis Road"
                    android:imeOptions="actionNext" />

            </androidx.cardview.widget.CardView>

            <!-- District Section -->
            <TextView
                android:id="@+id/textDistrict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="District"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardAddress"
                android:layout_marginTop="24dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardDistrict"
                android:layout_width="0dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="#80FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textDistrict"
                android:layout_marginTop="8dp">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#000000"
                    android:textColorHint="#444444"
                    android:hint="Select District"
                    android:imeOptions="actionNext" />

            </androidx.cardview.widget.CardView>

            <!-- Vehicle Capacity Header -->
            <TextView
                android:id="@+id/textCapacityHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Capacity"
                android:textColor="#7DC143"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardDistrict"
                android:layout_marginTop="32dp" />

            <!-- Capacity Cards Container -->
            <LinearLayout
                android:id="@+id/capacityContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textCapacityHeader"
                android:layout_marginTop="16dp">

                <!-- Cars Capacity -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#40FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Cars"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/editTextCarCapacity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:hint="0"
                            android:inputType="number"
                            android:textColor="#7DC143"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Bikes Capacity -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#40FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Bikes"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/editTextBikeCapacity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:hint="0"
                            android:inputType="number"
                            android:textColor="#7DC143"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Operating Hours Header -->
            <TextView
                android:id="@+id/textHoursHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Operating Hours"
                android:textColor="#7DC143"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/capacityContainer"
                android:layout_marginTop="32dp" />

            <!-- Hours Container -->
            <LinearLayout
                android:id="@+id/hoursContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textHoursHeader"
                android:layout_marginTop="16dp">

                <!-- Open Time -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#40FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Open Time"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/editTextOpenTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:hint="08:00 AM"
                            android:text="08:00 AM"
                            android:textColor="#7DC143"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Close Time -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#40FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Close Time"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/editTextCloseTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:hint="10:00 PM"
                            android:text="10:00 PM"
                            android:textColor="#7DC143"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Hourly Rate Section -->
            <TextView
                android:id="@+id/textHourlyRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hourly Rate (LKR)"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hoursContainer"
                android:layout_marginTop="24dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardHourlyRate"
                android:layout_width="0dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="#80FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textHourlyRate"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/editTextHourlyRate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#000000"
                    android:textColorHint="#444444"
                    android:hint="Rs. 100.00"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionNext" />

            </androidx.cardview.widget.CardView>

            <!-- Facilities Header -->
            <TextView
                android:id="@+id/textFacilitiesHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facilities"
                android:textColor="#7DC143"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardHourlyRate"
                android:layout_marginTop="32dp" />

            <!-- Facilities Container -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardFacilities"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#40FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textFacilitiesHeader"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- CCTV -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_cctv"
                            android:tint="#7DC143" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_gravity="center_vertical"
                            android:text="CCTV Surveillance"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchCCTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:thumbTint="#7DC143"
                            android:trackTint="#CCCCCC" />
                    </LinearLayout>

                    <!-- Security Guard -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_security"
                            android:tint="#7DC143" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_gravity="center_vertical"
                            android:text="Security Guard"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchSecurity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:thumbTint="#7DC143"
                            android:trackTint="#CCCCCC" />
                    </LinearLayout>

                    <!-- Booked Parking -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_booked"
                            android:tint="#7DC143" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_gravity="center_vertical"
                            android:text="Booked Parking"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchBooked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:thumbTint="#7DC143"
                            android:trackTint="#CCCCCC" />
                    </LinearLayout>

                    <!-- EV Charging -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_ev"
                            android:tint="#7DC143" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_gravity="center_vertical"
                            android:text="EV Charging"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchEV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:thumbTint="#7DC143"
                            android:trackTint="#CCCCCC" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Photos Header -->
            <TextView
                android:id="@+id/textPhotosHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photos"
                android:textColor="#7DC143"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardFacilities"
                android:layout_marginTop="32dp" />

            <!-- Photos Container -->
            <LinearLayout
                android:id="@+id/photosContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textPhotosHeader"
                android:layout_marginTop="16dp">

                <!-- Entrance Photo -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#40FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/imageEntrance"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_camera"
                            android:tint="#7DC143" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Entrance"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap to upload"
                            android:textColor="#AAAAAA"
                            android:textSize="12sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Interior Photo -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#40FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/imageInterior"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_camera"
                            android:tint="#7DC143" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Interior View"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap to upload"
                            android:textColor="#AAAAAA"
                            android:textSize="12sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Save Button -->
            <Button
                android:id="@+id/buttonSaveParking"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="#7DC143"
                android:elevation="12dp"
                android:text="Save and Publish Parking"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/photosContainer" />

            <!-- Edit Button -->
            <Button
                android:id="@+id/buttonEditParking"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#40FFFFFF"
                android:elevation="8dp"
                android:text="Edit Details"
                android:textColor="#7DC143"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:strokeColor="#7DC143"
                app:strokeWidth="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonSaveParking" />

            <!-- Bottom Spacing -->
            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonEditParking" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>