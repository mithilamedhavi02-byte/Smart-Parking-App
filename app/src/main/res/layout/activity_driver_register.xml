<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p1"
    android:scaleType="centerCrop"
    tools:context=".RegisterUser">

    <!-- Semi-transparent Overlay for better readability -->
    <View
        android:id="@+id/overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fadingEdgeLength="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Header Section -->
            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Smart Parking Finder"
                android:textColor="#7DC143"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/appSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="create your account to park smarter"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appTitle"
                android:layout_marginTop="8dp" />

            <!-- Full Name Section -->
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appSubtitle"
                android:layout_marginTop="32dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFullName"
                android:layout_width="0dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="#80FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView3"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/editTextFullName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#000000"
                    android:textColorHint="#444444"
                    android:hint="Enter your full name"
                    android:imeOptions="actionNext" />

            </androidx.cardview.widget.CardView>

            <!-- NIC Section -->
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIC"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardFullName"
                android:layout_marginTop="24dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardNIC"
                android:layout_width="0dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="#80FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView4"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/editTextNIC"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#000000"
                    android:textColorHint="#444444"
                    android:hint="Enter your NIC number"
                    android:imeOptions="actionNext" />

            </androidx.cardview.widget.CardView>

            <!-- Phone Number Section -->
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardNIC"
                android:layout_marginTop="24dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardPhone"
                android:layout_width="0dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="#80FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView5"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#000000"
                    android:textColorHint="#444444"
                    android:hint="Enter your phone number"
                    android:inputType="phone"
                    android:imeOptions="actionNext" />

            </androidx.cardview.widget.CardView>

            <!-- Email Section -->
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardPhone"
                android:layout_marginTop="24dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardEmail"
                android:layout_width="0dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="#80FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView7"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#000000"
                    android:textColorHint="#444444"
                    android:hint="Enter your email address"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext" />

            </androidx.cardview.widget.CardView>

            <!-- Password Section -->
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardEmail"
                android:layout_marginTop="24dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardPassword"
                android:layout_width="0dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="#80FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView6"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#000000"
                    android:textColorHint="#444444"
                    android:hint="Enter your password"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext" />

            </androidx.cardview.widget.CardView>

            <!-- Confirm Password Section -->
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardPassword"
                android:layout_marginTop="24dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardConfirmPassword"
                android:layout_width="0dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="#80FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView8"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/editTextConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#000000"
                    android:textColorHint="#444444"
                    android:hint="Confirm your password"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone" />

            </androidx.cardview.widget.CardView>

            <!-- Register Button -->
            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:text="Register"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="#7DC143"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardConfirmPassword"
                android:layout_marginTop="32dp"
                android:elevation="8dp"
                android:stateListAnimator="@null" />

            <!-- Login Link -->
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonRegister"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="#7DC143"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/textView9"
                app:layout_constraintBaseline_toBaselineOf="@id/textView9" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>